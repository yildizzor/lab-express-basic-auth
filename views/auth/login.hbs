<h2>Welcome Login Page</h2>

<div>
  <form action="/login" method="POST">

    <input
      id="email-adres"
      type="email"
      name="email"
      placeholder="Email Adress" required
    /><br />
    <br />

    <input id="password" type="password" name="password" placeholder="Password" required />
    <br />
    <br />
    <button>Login</button>
  </form>

  <div>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </div>
</div>