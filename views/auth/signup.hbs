<h2>Welcome SignUp Page</h2>

<div>

  <form action="/signup" method="POST">

    <input
      id="user-name"
      type="text"
      name="username"
      placeholder="Username"
      required
    />
    <br />
    <br />

    <input
      id="email-adres"
      type="email"
      name="email"
      placeholder="Email Adress"
      required
    />
    <br />
    <br />

    <input
      id="password"
      type="password"
      name="password"
      placeholder="Password"
      required
    />
    <br />
    <br />
    <button>Submit</button>
  </form>

  <div>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </div>
</div>